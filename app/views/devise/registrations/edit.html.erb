<div class='container'>
  <div class="col-sm-6 col-sm-offset-3 mt+">

    <h2 class="text-center"><%= t(".edit", resource: "") %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></p>
        <% end %>

        <%= f.input :last_name %>
        <%= f.input :first_name %>
        <%= f.input :phone_number %>
        <%= f.input :company_name %>

        <%#= f.input :new_password, autocomplete: "off", hint: t(".password_instruction"), required: false %>
        <%#= f.input :password_confirmation, required: false %>
        <%= f.input :current_password, hint: t(".current_password_instruction"), required: true %>

      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, t(".update") %>
      </div>
    <% end %>

    <!-- <h3 class="text-center"><%#= t(".cancel_my_account") %></h3> -->

    <p class="text-center mt-"><%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %></p>

    <p class="text-center"><%= link_to t("devise.shared.links.back"), :back %></p>

  </div>
</div>
