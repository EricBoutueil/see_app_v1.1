<div class='container'>
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 mt+">

    <h2 class="text-center"><%= t(".forgot_your_password") %></h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, t(".send_me_reset_password_instructions") %>
      </div>
    <% end %>

    <p class="text-center mt"><%= render "devise/shared/links" %></p>

  </div>
</div>
